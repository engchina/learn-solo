{
  "appId": "com.markdowneditor.app",
  "productName": "Markdown Editor",
  "copyright": "Copyright Â© 2024 Markdown Editor",
  "directories": {
    "output": "dist-app"
  },
  "files": [
    "dist",
    "dist-electron",
    "node_modules",
    "package.json"
  ],
  "mac": {
    "icon": "build/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "win": {
    "target": "dir"
  },
  "linux": {
    "icon": "build/icon.png",
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Markdown Editor"
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}"
  },
  "publish": null
}